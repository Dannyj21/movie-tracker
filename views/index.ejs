<!DOCTYPE html>
<html>
  <%- include('partials/head.ejs') %>
  <body>
    <!-- Header -->
    <%- include('partials/header.ejs') %>

    <!-- Sidebar -->
    <div class="sidebar"><%- include('partials/sidebar.ejs') %></div>

    <!-- Main Content -->
    <div class="content-container">
      <h2>All Movies</h2>
      <%- include('partials/movies.ejs') %>
      <!-- Modal -->
      <div class="modal fade" id="movieModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Movie Information</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div id="movieInfo"></div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary">Rate</button>
              <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Add to Watchlist</button>
              <button type="button" class="btn btn-primary">Add to Favorites</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <%- include('partials/footer.ejs') %>
    
    <script src="js/script.js"></script>
  </body>
</html>
