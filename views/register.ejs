<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs') %>
<body>
    <!-- Header -->
    <%- include('partials/header.ejs') %>

    <!-- Sidebar -->
    <div class="sidebar"><%- include('partials/sidebar.ejs') %></div>

    <!-- Main Content -->
    <div class="content-container">
        <form action="/register" method="post" class="card w-75 needs-validation" novalidate>
            <div class="card-header">
                <h2>Register</h2>
            </div>
            <div class="card-body">
                <div class="form-floating text-black-50 mb-3">
                    <input type="text" id="username" name="username" class="form-control"
                           placeholder="Username" required>
                    <label for="username">Username</label>
                </div>
                <div class="form-floating text-black-50 mb-3">
                    <input type="password" id="password" name="password" class="form-control"
                           placeholder="Password" required>
                    <label for="password">Password</label>
                </div>
                <div class="form-floating text-black-50 mb-3">
                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
                           placeholder="Confirm Password" required>
                    <label for="confirmPassword">Confirm Password</label>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn register-btn">Register</button>
                </div>
            </div>
        </form>
    </div>
    <!-- SUBMISSION STATUS TOAST -->
    <div class="toast-container bottom-0 start-50 translate-middle">
        <div class="toast align-items-center border-0
            <% if (typeof border != 'undefined') { %>
                    <%= border %>
             <% } %>"
             role="alert" id="toastMessage">
            <div class="d-flex">
                <div class="toast-body" id="toastMessage">
                    <% if (typeof message != "undefined") { %>
                        <h3>
                            <%= message %>
                        </h3>
                    <% } %>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <%- include('partials/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="js/script.js"></script>
</body>
</html>
