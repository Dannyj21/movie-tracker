<!DOCTYPE html>
<html>
    <%- include('partials/head.ejs') %>
    <body>
        <!-- Header -->
        <%- include('partials/header.ejs') %>

        <!-- Sidebar -->
        <div class="sidebar"><%- include('partials/sidebar.ejs') %></div>

        <!-- Main Content -->
        <div class="content-container">
            <h2>Search Results for "<%=keyword%>"</h2>
            <div class="searchRender">
                <% if (Array.isArray(searchMovies) && searchMovies.length === 0) { %>
                    <h2> Sorry, no matching movies. </h2>
                <% } else { %>
                    <% for (i=0; i < searchMovies.length; i++) { %>
                        <div class="searchMovie">
                            <a href="#" class="movieAnchor" id="<%=searchMovies[i].movie_id%>">
                                <% if (searchMovies[i].poster_url === "N/A") { %>
                                <img src="img/placeholder.png" alt="<%=searchMovies[i].title%>"><br>
                                <%} else {%>
                                <img src="<%=searchMovies[i].poster_url%>" alt="<%=searchMovies[i].title%>"><br>
                                <% } %>
                                <%=searchMovies[i].title%>
                            </a>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
        
        <%- include('partials/movieModal.ejs') %>
        <%- include('partials/commentModal.ejs') %>
    
    <!-- Footer -->
    <%- include('partials/footer.ejs') %>
        <script src="js/script.js"></script>
    </body>
</html>
      